<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

 <data>

   <variable
     name="movie"
     type="com.skydoves.entity.entities.Movie" />

   <variable
     name="palette"
     type="android.view.View" />
 </data>

  <RelativeLayout
    android:id="@+id/item_movie_container"
    android:layout_width="200dp"
    android:layout_height="290dp"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:layout_marginRight="10dp"
    android:layout_marginEnd="10dp"
    tools:background="@color/background"
    tools:ignore="UnusedAttribute">

    <ImageView
      android:id="@+id/item_poster_post"
      android:layout_width="match_parent"
      android:layout_height="240dp"
      android:scaleType="fitXY"
      app:bindingPalettePostUrl="@{movie.poster_path}"
      app:palette="@{palette}"
      tools:src="@drawable/ic_star" />

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_alignParentBottom="true"
      android:orientation="vertical"
      tools:background="@color/colorPrimaryDark">

      <LinearLayout
        android:id="@+id/item_poster_palette"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:orientation="vertical" />

      <TextView
        android:id="@+id/item_poster_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="3dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="@{movie.title}"
        tools:text="title" />
    </RelativeLayout>
  </RelativeLayout>
</layout>
